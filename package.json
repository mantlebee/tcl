{
  "name": "@mantlebee/tcl",
  "version": "1.0.4",
  "description": "Typescript common library.",
  "main": "dist/tcl.min.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "build:watch": "webpack --watch --config webpack.dev.js",
    "test": "mocha --require ts-node/register test/**/*.spec.ts",
    "test:watch": "mocha --require ts-node/register test/**/*.spec.ts --extension ts --watch src",
    "doc": "typedoc --mode file --out docs src",
    "prepublish": "npm run test && npm run build && npm run doc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mantlebee/tcl.git"
  },
  "keywords": [
    "mantlebee",
    "typescript"
  ],
  "author": "MantleBee",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mantlebee/tcl/issues"
  },
  "homepage": "https://github.com/mantlebee/tcl#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.2.1"
  }
}
